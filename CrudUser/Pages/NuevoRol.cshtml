@page
@model CrudUser.Pages.NuevoRolModel
@{
}
<h3>Nuevo Rol</h3>
<hr />
<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre"  class="form-control" type="text" />
                <span asp-validation-for="Nombre"  class="text-danger"></span>
            </div>
            <a asp-page="Roles" class="btn btn-secondary">Volver</a>
            <button class="btn btn-primary" type="submit">Guardar</button>
            <div asp-validation-summary="All" class="text-danger mt-3"></div>
        </form>
    </div>
</div>
