@page
@model CrudUser.Pages.RolesModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Mantenedor de roles</h3>
        </div>
        <div class="col-md-6">
            <a asp-page="NuevoRol" class="btn btn-primary float-right"><i class="bi bi-person-plus"></i> Nuevo</a>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-header bg-primary text-white">
            Listado de roles
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Nombre del rol
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rol in Model.Roles)
                    {
                        <tr>
                            <td>
                                @rol.Id
                            </td>
                            <td>
                                @rol.Nombre
                            </td>

                            <td>
                                <a asp-page="EditarRol" asp-route-id="@rol.Id" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Editar rol"><i class="bi bi-pencil-square"></i></a>
                                <a asp-page="EliminarRol" asp-route-id="@rol.Id" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar rol"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
            <a asp-page="Home" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
